generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  
}

model User {
  id          String   @id @default(uuid())
  name        String
  username    String   @unique
  email       String   @unique
  passwordHash String
  createdAt   DateTime @default(now())
  files       File[]

  @@index([email])
  @@index([username])
}

model File {
  id         String   @id @default(uuid())
  userId     String
  filename   String
  filepath   String
  size       Int
  visibility String   @default("PUBLIC") // "PUBLIC" | "PRIVATE"
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([visibility])
}
